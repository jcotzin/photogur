<% if !user_signed_in? %>
  <p><%= link_to "Sign Up To Upload A Picture", new_user_registration_path %></p>
<% end %>
<h1>Upload Your Picture!</h1>
<%= render 'form', picture: @picture %>
<br>
<br>
<h1>Pictures</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.title %></td>
        <td><%= image_tag picture.url %></td>
        <td><%= link_to 'Show', picture %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
        <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
